# IMAP: offlineimap
set mbox_type=Maildir
set folder = "~/Mail"
source ~/.config/neomutt/mailboxes
set header_cache= "~/.localmail/header_cache"
set spoolfile = "~/Mail/INBOX"
set postponed = "~/Mail/[Gmail].Drafts"
# set trash= "~/Mail/[Gmail].Trash"
# set status_format="%m %s"
set sidebar_visible
bind index,pager B sidebar-toggle-visible   # Use 'B' to switch the Sidebar on and off
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats
bind index,pager \CP sidebar-prev       # Ctrl-Shift-P - Previous Mailbox
bind index,pager \CN sidebar-next       # Ctrl-Shift-N - Next Mailbox
bind index,pager \CO sidebar-open       # Ctrl-Shift-O - Open Highlighted Mailbox
color sidebar_indicator default color17         # Dark blue background
color sidebar_highlight white   color238        # Grey background
color sidebar_spoolfile yellow  default         # Yellow
color sidebar_new       default default         # Green
color sidebar_ordinary  default default         # Default colors
color sidebar_flagged   red     default         # Red
color sidebar_divider   color8  default         # Dark grey

set timeout=30
set mail_check=30

set editor=nvim
set record = +Sent
unset record
set realname = 'Piotr Grela'
set from = peter.grela@gmail.com
set imap_pass= "awuw hnmm ecob xrai"
set smtp_pass = $imap_pass
set ssl_force_tls = yes
set smtp_url=smtps://peter.grela@smtp.gmail.com

auto_view text/html
macro index,pager \cb "<pipe-message> urlscan<Enter>" "call urlscan to extract URLs out of a message"
macro attach,compose \cb "<pipe-entry> urlscan<Enter>" "call urlscan to extract URLs out of a message"

bind pager,browser			h			exit
bind attach,alias			h			exit
bind pager				l			view-attachments
bind pager 				k 			previous-line
bind pager 				j 			next-line
bind pager				g			top
bind pager				G			bottom
bind index				j			next-entry
bind index				k			previous-entry
bind attach,index 			g 			first-entry
bind attach,index 			G 			last-entry
bind index				l			display-message
bind attach				l			view-attach
bind browser,alias			l			select-entry
bind index				/			search
## default binding for limit is l
bind index				?			limit
## default binding for help is ?
bind index,pager,attach			<F1>			help
## default binding for header view (toggle-weed) is h
bind pager				H			display-toggle-weed
bind attach,index,pager 		\CD 			next-page
bind attach,index,pager 		\CU 			previous-page

