#!/bin/sh
vol="$(pamixer --get-volume)"
if [ "$vol" -gt "86" ]; then
	icon="█ "
elif [ "$vol" -gt "75" ]; then
	icon="▇ "
elif [ "$vol" -gt "64" ]; then
	icon="▆ "
elif [ "$vol" -gt "53" ]; then
	icon="▅ "
elif [ "$vol" -gt "42" ]; then
	icon="▄ "
elif [ "$vol" -gt "31" ]; then
	icon="▃ "
elif [ "$vol" -gt "20" ]; then
	icon="▂ "
else
	icon="▁ "
fi
echo "     $icon$vol%   "
